{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Git: Sync (pull --rebase + push)",
      "type": "shell",
      "command": "git",
      "args": [
        "pull",
        "--rebase"
      ],
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Git: Push",
      "type": "shell",
      "command": "git",
      "args": [
        "push"
      ],
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Git: Sync (pull --rebase + push) [one-shot]",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-Command",
        "git pull --rebase; if ($LASTEXITCODE -ne 0) { exit $LASTEXITCODE }; git push; exit $LASTEXITCODE"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
